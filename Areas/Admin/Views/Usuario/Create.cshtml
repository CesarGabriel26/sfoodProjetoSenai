@model App.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<div class="justify-content-center text-center d-flex flex-column align-items-center borda ">
    <div class="row bg-dange col-md-8 justify-content-center text-center ">
        <h1 class="">Logar Usuário</h1>
        
        <div class="col-md-11 text-start m-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="col-12 d-flex justify-content-between">
                    <div class="col-5">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-5">
                        <div class="form-group">
                            <label asp-for="Login" class="control-label mb-1"></label>
                            <input asp-for="Login" class="form-control" />
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    <label asp-for="Imagem" class="control-label"></label>
                    <input asp-for="Imagem" class="form-control" />
                    <span asp-validation-for="Imagem" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CEP" class="control-label"></label>
                    <input asp-for="CEP" class="form-control" />
                    <span asp-validation-for="CEP" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="Senha" class="control-label"></label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <div class="form control m-4 d-flex">
                    <input class="botaoVermelho me-4" type="submit" value="Sign-in" />
                    <a class="botaoVermelho" asp-area="" asp-controller="Login"
                                asp-action="Index">Log-in</a>
                    <!--<div class="form control p-3"> <a asp-action="Index">Voltar à lista</a></div>-->
                </div>

            </form>
        </div>
    </div>


</div>