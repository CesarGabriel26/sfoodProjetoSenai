@model App.Models.Usuario
@{
    ViewData["Title"] = "Login";
}

<div class="justify-content-center text-center d-flex flex-column align-items-center p-4 ">
    <div class="row bg-dange col-md-8 justify-content-center text-center borda p-3">
        <div class="BemVindo "><img src="~/img/logo2.png">
           <h2>Acesse sua conta S-food!</h2> 
        </div>

        <div class="col-md-11 text-start m-4">
            <form asp-action="Index">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-groupe mb-5">
                    <label asp-for="Login" class="control-label btn text-warning fs-3" > Nome:</label>
                    <input asp-for="Login" type="text" class="form-control border border-warning border-2"/> 
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-groupe">
                    <label asp-for="Senha" class="control-label btn text-warning fs-3"> Senha: </label>
                    <input type="password" asp-for="Senha" class="form-control border border-warning border-2" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>


                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <p class="text-danger">@ViewBag.ErrorMessage</p>
                }

                <div class="form control m-4 d-flex">
                    <button type="submit" class="btn botaoAmarelo"> Criar uma conta </button>
                    <button type="submit" class="btn botaoAmarelo"> Entrar </button>
                </div>
            </form>
        </div>
    </div>
</div>
