@model App.Models.Usuario
@{
    ViewData["Title"] = "Login";
}

<div class="justify-content-center text-center d-flex flex-column align-items-center p-4 ">
    <div class="row bg-dange col-md-8 justify-content-center text-center borda p-3">
        <h1>Login</h1>

        <div class="col-md-11 text-start m-4">
            <form asp-action="Index">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group mb-5">
                    <label asp-for="Login" class="control-label"></label>
                    <input asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label"></label>
                    <input type="password" asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>


                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <p class="text-danger">@ViewBag.ErrorMessage</p>
                }

                <div class="form control m-4 d-flex">
                    <input type="submit" value="Entrar" class="botaoVermelho" />
                </div>
            </form>
        </div>
    </div>
</div>
