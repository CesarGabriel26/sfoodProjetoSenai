@model App.Models.Produto

@section scripts {
  <script src="~/js/heart.js"></script>
}

<main class="text-center d-flex justify-content-center align-items-center container row aling">

  <div class="ProdutoCard p-5 d-flex justify-content-center align-items-center text-center col-8 container row">
    <div class="row">
      <div class="col-5 me-3">
        <img class="w-100" src="@Model.Imagem">
      </div>

      <div class=" col-6">

        <div class="">
          <h3 class="m-0 p-0 mb-3 text-start"> @Model.Nome </h3>

          <div class="d-flex">
            <h3 class="me-2 mb-3"> Quantidade</h3>

            <div class=" col-12 col-md-5 me-1 d-flex mb-3 ms-2 ">
              <button class="btn rounded-0 border m-0 ">-</button>
              <p class="btn rounded-0 border m-0 ">1</p>
              <button class="btn rounded-0 border m-0 ">+</button>
            </div>
          </div>

          <button class="btn BotaoLaranja w-100 d-flex justify-content-between ps-2 pe-2 m-0">
            <span>Add. ao carrinho</span>
            <p class="m-0 ms-3" id="TotalPrice">@Model.preco.ToString("C") </p>
          </button>
        </div>

      </div>
    </div>
  </div>





